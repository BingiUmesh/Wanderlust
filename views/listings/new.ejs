<%- layout("/layouts/boilerplate.ejs") -%>
<div class="row mt-4">
  <div class="col-8 offset-2">
    <h1>Creat New Listing</h1>
    <form action="/listings" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a catchy title"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          type="text"
          name="listing[image]"
          placeholder="Enter image URL/Link"
          class="form-control"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="title" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            placeholder="1300"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3 col-md-8">
          <label for="title" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="title" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Khammam, Telangana"
          class="form-control"
          required
        />
      </div>

      <button class="btn btn-dark add-btn mt-3 mb-4">Add</button>
    </form>
  </div>
</div>
