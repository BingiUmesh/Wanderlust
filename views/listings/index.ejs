<%- layout("/layouts/boilerplate.ejs") -%>

<div id="filters">
  <a class="filter" href="/listings/category/trending">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>

  <a class="filter" href="/listings/category/rooms">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>

  <a class="filter" href="/listings/category/iconic%20cities">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic cities</p>
  </a>

  <a class="filter" href="/listings/category/mountains">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </a>

  <a class="filter" href="/listings/category/castles">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </a>

  <a class="filter" href="/listings/category/amazing%20pools">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Amazing pools</p>
  </a>

  <a class="filter" href="/listings/category/camping">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </a>

  <a class="filter" href="/listings/category/farms">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Farms</p>
  </a>

  <a class="filter" href="/listings/category/arctic">
    <div><i class="fa-regular fa-snowflake"></i></div>
    <p>Arctic</p>
  </a>

  <a class="filter" href="/listings/category/beach">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </a>

  <a class="filter" href="/listings/category/parks">
    <div><i class="fa-solid fa-paw"></i></div>
    <p>Parks</p>
  </a>

  <div
    class="tax-toggle mt-2 ms-5 border border-black border-opacity-25 rounded-3 ps-3 pe-3 pt-3 pb-3"
  >
    <div class="form-check form-switch form-check-reverse">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<!-- slider -->
<% if(originalUrl==="/listings"){%>
<div class="d-flex justify-content-center my-2">
  <div
    id="carouselExampleAutoplaying"
    class="carousel slide"
    data-bs-ride="carousel"
  >
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&w=800&h=500&q=60"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          src="https://images.unsplash.com/photo-1618140052121-39fc6db33972?auto=format&fit=crop&w=800&h=500&q=60"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          src="https://images.unsplash.com/photo-1470165301023-58dab8118cc9?auto=format&fit=crop&w=800&h=500&q=60"
          alt="..."
        />
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
<% } %>

<div class="container">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 my-5">
    <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_img"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            &#x20B9;<%= listing.price.toLocaleString("en-IN") %>/night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</div>

<script src="taxToggle.js"></script>
